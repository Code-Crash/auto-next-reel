{
    "manifest_version": 3,
    "name": "Next Reel",
    "version": "1.0",
    "description": "Automatically skip to the next video when progress reaches 90%.",
    "permissions": [
        "storage"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "jquery.min.js",
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "icons": {
        "48": "icon48.png",
        "128": "icon128.png"
    }
}